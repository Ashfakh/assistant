{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Docker: FastAPI",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-compose-up",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "fastapi"
            },
            "dockerServerReadyAction": {
                "pattern": "Uvicorn running on http://0\\.0\\.0\\.0:8000",
                "uriFormat": "http://localhost:8000",
                "action": "openExternally"
            }
        }
    ]
}